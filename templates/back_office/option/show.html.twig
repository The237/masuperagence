{% extends "/layouts/base.html.twig" %}
{% block title 'Property '~ option.id ~' details'%}

{% block body %}

    <div class="container mt-4">
        <h1 class="text-center"> {% trans %}Option {% endtrans %} {{option.id}}</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ option.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ option.name }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('admin.option.index') }}" class="btn btn-primary" title="Back to list link"><i class="fas fa-arrow-left"></i></a>

        <a href="{{ path('admin.option.edit', {'id': option.id}) }}" class="btn btn-warning"><i class="fas fa-edit"></i></a>

        {{ include('back_office/option/_delete_form.html.twig') }}
    </div>
{% endblock %}
