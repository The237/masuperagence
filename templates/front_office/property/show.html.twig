{% extends "/layouts/base.html.twig" %}
{% block title 'Property '~ property.id ~' details'%}

{% block body %}

    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-md-8"></div>

                <div class="col-md-4">
                    <h1>
                        {{ property.title }}
                    </h1>
                    <h2>
                        {{ property.rooms }}
                        -
                        {{ property.surface }}
                        m²</h2>
                    <div class="text-primary font-weight-bold" style="font-size:4rem">
                        {{ property.formatedPrice }}    €
                    </div>
                    <a href="#" class="btn btn-primary">
                        {% trans %}
                        Contact the agency
                        {% endtrans %}
                    </a>
                </div>
            </div>
        </div>
    </div>
	<div class="container mt-4">
        <p>
            {{ property.description|nl2br }}
        </p>

        <div class="row">
			<div class="col-md-8">
                <h2> {% trans %} Features {% endtrans %} </h2>
                <table class="table table-striped table-hovered mb-0">
                    <thead>
                        <tr>
                            <th class="text-center text-uppercase">
                                {% trans %} Livable surface {% endtrans %} 
                            </th> 
                            <th class="text-center text-uppercase">
                                {% trans %} Number of pieces {% endtrans %} 
                            </th>   
                            <th class="text-center text-uppercase">
                                {% trans %} Number of rooms {% endtrans %} 
                            </th>
                            <th class="text-center text-uppercase">
                                {% trans %} Floor {% endtrans %} 
                            </th>
                            <th class="text-center text-uppercase"> 
                                {% trans %} Type of heating {% endtrans %} 
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="text-center align-middle">
                                {{property.surface}}
                            </td> 
                            <td class="text-center align-middle">
                                {{property.rooms}}
                            </th>   
                            <th class="text-center align-middle">
                                {{property.bedrooms}}
                            </th>
                            <th class="text-center align-middle">
                                {{property.floor}}
                            </th>
                            <th class="text-center align-middle"> 
                                {{property.heatType }}
                            </th>
                        </tr>
                    </tbody>
                </table>
            </div>

			<div class="col-md-4">
				<h2> {% trans %} Specificities {% endtrans %} </h2>
			</div>
		</div>
       
	</div>
{% endblock %}
